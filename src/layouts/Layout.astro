---
import Header from '../components/Header.astro';
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>NóminaPro - Confección Hospitalaria</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.23/jspdf.plugin.autotable.min.js"></script>
  </head>
  <body class="font-sans min-h-screen">
    <!-- Fondo radial -->
    <div class="absolute inset-0 h-full w-full bg-white">
      <div class="absolute inset-0 bg-[radial-gradient(rgba(0,0,0,0.2)_1px,transparent_1px)] bg-[size:16px_16px]"></div>
    </div>

    <!-- Header -->
    <Header />

    <!-- Contenido principal -->
    <main class="max-w-7xl mx-auto p-4 py-8 relative z-10">
      <slot />
    </main>
  </body>
</html>